{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": [
        "$tslint5"
      ]
    },
    {
      "type": "npm",
      "script": "watch-build",
      "group": "build",
      "isBackground": true,
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "type": "npm",
      "script": "test",
      "group": "test",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "test-unit",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "test-e2e",
      "group": "test",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "watch-test",
      "isBackground": true,
      "group": "test",
      "problemMatcher": []
    }
  ]
}